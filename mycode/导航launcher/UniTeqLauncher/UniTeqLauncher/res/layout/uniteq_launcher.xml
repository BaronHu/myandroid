<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top" >

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="@dimen/navigation_width"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_top"
            android:src="@drawable/unavigation" />

        <ImageView
            android:id="@+id/date_time"
            android:layout_width="@dimen/layout_width_large"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_e"
            android:src="@drawable/udatetime" />        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_top" >
        <ImageView
            android:id="@+id/bt"
            android:layout_width="@dimen/layout_width_small"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_top"
            android:src="@drawable/ubt" />
        <ImageView
            android:id="@+id/fm"
            android:layout_width="@dimen/layout_width_small"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_left_e"
            android:src="@drawable/fmt" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="@dimen/layout_width_large"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_e"
            android:src="@drawable/music_icon" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_top">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/layout_width_small"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_top"
            android:src="@drawable/uphoto" />
        <ImageView
            android:id="@+id/video"
            android:layout_width="@dimen/layout_width_small"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_e"
            android:src="@drawable/uvideo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_left_e"
            android:paddingRight="35dip" >
            
            <ImageView
            android:id="@+id/setting"
            android:layout_width="@dimen/setting_width"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_top"
            android:src="@drawable/usettings" />

            <com.unistrong.uniteqlauncher.ui.MyView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usettings" />
        </LinearLayout>

</LinearLayout>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cellon.ows"
    android:sharedUserId="android.uid.system"
    android:versionCode="2"
    android:versionName="2.0" >

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <uses-library android:name="com.android.qualcomm.qcnvitems" />
        <uses-library android:name="com.android.qualcomm.qcrilhook" />

        <activity android:name=".OwsSettingPreference"></activity>
        <activity android:name=".OWSSmsServiceActivity"></activity>
        <service android:name=".OwsService" android:enabled="true"></service>
        <receiver android:name=".OwsSecretReceiver" >
            <intent-filter>
        		<action android:name="android.provider.Telephony.SECRET_CODE" /> 
          		<data android:scheme="android_secret_code" android:host="1470963" /> 
        	</intent-filter>
        </receiver>
        <receiver android:name=".OwsBroadcastReceiver" >
        	<intent-filter>
        		<action android:name="android.intent.action.BOOT_COMPLETED" />
        		<action android:name="com.cellon.ows.CALL_TIME_LIMITE" />
        		<action android:name="com.cellon.ows.SMS_SENT_OK" />
        		<action android:name="com.cellon.ows.SMS_SENT_SUCCESSFULLY" />
        		<action android:name="com.cellon.ows.STANDBY_TIME_LIMITE" />
        		<category android:name="android.intent.category.LAUNCHER" />
        	</intent-filter>
        </receiver>
    </application>
    
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

</manifest>
